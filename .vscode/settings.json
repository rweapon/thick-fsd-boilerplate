{
  // Auto fix
  "files.autoSave": "afterDelay",
  "editor.formatOnSave": false,
  "eslint.workingDirectories": [{ "mode": "auto" }],
  "eslint.format.enable": true,
  // Silent the stylistic rules in you IDE, but still auto fix them
  "eslint.rules.customizations": [
    {
      "fixable": true,
      "rule": "style/*",
      "severity": "off"
    },
    {
      "fixable": true,
      "rule": "*-indent",
      "severity": "off"
    },
    {
      "fixable": true,
      "rule": "*-spacing",
      "severity": "off"
    },
    {
      "fixable": true,
      "rule": "*-spaces",
      "severity": "off"
    },
    {
      "fixable": true,
      "rule": "*-order",
      "severity": "off"
    },
    {
      "fixable": true,
      "rule": "*-dangle",
      "severity": "off"
    },
    {
      "fixable": true,
      "rule": "*-newline",
      "severity": "off"
    },
    {
      "fixable": true,
      "rule": "*quotes",
      "severity": "off"
    },
    {
      "fixable": true,
      "rule": "*semi",
      "severity": "off"
    }
  ],
  "eslint.runtime": "node",
  // Enable eslint for all supported languages
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "vue",
    "html",
    "markdown",
    "json",
    "json5",
    "jsonc",
    "yaml",
    "toml",
    "xml"
  ],

  "files.associations": { "*.css": "tailwindcss" },

  // Setting eslint as default forrmater for js/ts file types
  "[javascript]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "[typescript]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  }
}
